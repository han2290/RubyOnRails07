
<div class = "text-center">
    <h2>질문 목록</h2>
</div><br/>
<ul class = "list-group">
    <%@Asks.reverse.each do |row|%>
            <li class="list-group-item list-group-item-light">
                
                <%=row.question%>
                
                <small>
                    <%=row.ip_address%>-
                    <%=row.region%>
                </small>
                
                <a class="btn btn-secondary" href = "/ask/<%=row.id%>/show">
                    보기
                </a>
                
                <a class="btn btn-secondary" href = "/ask/<%=row.id%>/edit">
                    수정
                </a>
                
                <a data-confirm="이 글을 삭제합니까?" class="btn btn-secondary" href = "/ask/<%=row.id%>/delete">
                    삭제
                </a>
                
                
                
            </li>
    <%end%>
</ul>

